        a(class='btn btn-primary', href='/report/#{year}/'+(index+1)) #{mon}
      else
        a(class='btn btn-link', href='/report/#{year}/'+(index+1)) #{mon}
  hr
  div.row
    div.col-md-12
        h3 Project Summary
        #summary
  div.row
    div.col-md-6
        #projectSummaryDiv.chartdiv